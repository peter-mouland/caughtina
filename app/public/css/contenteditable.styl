#article{
    p[contenteditable],
    h2[contenteditable],
    dt[contenteditable],
    dd[contenteditable]{
        z-index:2;
        border: 1px dashed;
        position:relative;
        padding:4px;
        left:-4px;
        top:-4px;
        &:hover{
            border-style:solid;
        }
        &:focus{
            border-style:solid;
            background: #000;
            box-shadow: 0px 0px 5px 5px #000;
        }
    }
}
.edit-controls{
    display: none;
    position: absolute;
    margin-left: -20px;
    width: 20px;
    border-style: solid;
    border-width:1px 0 1px 1px;
    box-shadow: 0px 0px 5px 5px #000;
    background: #000;
    z-index:1;
    span{
        display:block;
        text-align: center;
        line-height: 20px;
        font-weight: bold;
        cursor: pointer;
        &:hover{
            color: white;
        }
    }
}
.edit-controls.show{
    display: block;
}
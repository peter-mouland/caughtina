#site_header{
    border: 0px solid header-shadow;
    border-radius:20px 20px 0 0;
    font-family: 'Quicksand';
    font-size: 3em;
    margin: 30px 0 0;
    text-shadow: 1px 1px 1px header-shadow;
    padding:20px 0 0;
    position:relative;
    background: rgba(0,0,0,0.5);
    -webkit-transition:background 1s ease-out;
    -moz-transition:background 1s ease-out;
    -o-transition:background 1s ease-out;
    -ms-transition: background 1s ease-out;
    transition:background 1s ease-out;

    .site_name{
        margin: 0pc;
        font-size: 1.4em;
        text-align: center;
        letter-spacing: -10px;
        word-spacing: 10px;
        color:main-color;
    }
    .tag_line{

        font-size: 0.35em;
        text-align: center;
        margin-bottom: 20px;
        margin: 0 auto;
        margin-bottom: 2em;
        overflow: visible;
    }

    ul {
        overflow:auto;
        li{
            float:left;
            font-size: 0.4em;
            a{
                border-radius: 15px 15px 0 0;
                padding: 10px 20px;
                background:rgba(0, 0, 0, 0.5);
                text-decoration: none;
                color: #FFDEA9;
                display: block;
                border: 1px solid header-shadow;
                border-width: 1px 1px 0 0;
            }
            a:focus,
            a:hover{
                background:rgba(0, 0, 0, 1);
                color: darken(#F2E4D5,50%);
            }
        }
    }
    form{
        position: absolute; bottom: 0px; right:0;border-radius: 15px 15px 0 0;
        padding: 0.5em 30px;
        background:rgba(0, 0, 0, 0.5);
        line-height: 1px;
        font-size: 0.4em;
        input[type=search]{
            width:150px;
        }
    }
    form:hover{
        background:header-shadow;
    }
}
body{
    #page_header{
        position: relative;
        border: 0;
        border-bottom: 4px solid #D48300;
        box-shadow: 0px 20px 20px -10px black;
        color: #D48300;
        font-size: 2em;
        font-weight: bold;
        background: rgba(0, 0, 0, 0.75);
        margin:  0 0 15px 0;
        padding: 20px;
        -webkit-transition:background 1s ease-out;
        -moz-transition:background 1s ease-out;
        -o-transition:background 1s ease-out;
        -ms-transition: background 1s ease-out;
        transition:background 1s ease-out;
        .time{
            position: absolute;
            top: 0.5em;
            left: 20px;
            font-size: 0.4em;
            font-weight: normal;
            color: #D48300;
        }
        .button{
            font-size: 0.45em;
            right: 0; bottom: 0;
            position: absolute;
            cursor: pointer;
            background: rgba(0,0,0,0.5);
            line-height: 2em;
            padding: 0 20px;
            color: #d48300;
            border-radius: 10px 0 0 0;
            border:1px solid;
            border-width: 1px 0 0 1px;
            &:hover{
                background:#000;
            }
        }
    }
}
body.fixed {
    padding-top:300px;
    #site_header{
        border: 0;
        position: fixed; top:-168px; width: 960px; padding-bottom: 0px; z-index: 10;
        background: rgb(23,28,42);
    }
    #page_header{
        position: fixed;
        top: 40px;/*24px;*/
        width: 920px;
        background: rgb(11,14,22);
        z-index: 1;
    }
    .authorProfile{
        top:20px;
    }
}


.authorProfile{
    box-shadow: 0px 0px 14px 0px #000;
    position: absolute;
    top:289px;
    right:20px;
    width:200px;
    background: rgba(0,0,0,0.5);
    padding:20px;
    color: #D48300;
    img{
        border-bottom: 2px solid #D48300;
    }
    small{
        display:block;
        margin:6px 0 0;
        color: #D4A775;

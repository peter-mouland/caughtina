#site_header{
    overflow: auto;
    border: 0px solid header-shadow;
    border-bottom: 4px solid #D48300;
    font-family: 'Quicksand';
    font-size: 3em;
    padding-top:0;
    padding-bottom:0;
    position:relative;
    background: none;
    -webkit-transition:background 1s ease-out;
    -moz-transition:background 1s ease-out;
    -o-transition:background 1s ease-out;
    -ms-transition: background 1s ease-out;
    transition:background 1s ease-out;

    .hgroup{
        width:240px;
        float:left;
        padding-right:3px;

        .site_name{
            margin: 0pc;
            font-size: 1.2em;
            text-align: justify;
            letter-spacing: -8px;
            word-spacing: 10px;
            color:#d48300;
        }
        .tag_line{
            display: none;;
            font-size: 0.35em;
            text-align: center;
            margin-bottom: 20px;
            margin: 0 auto;
            margin-bottom: 2em;
            overflow: visible;
        }

    }

    ul {
        overflow:auto;
        float: left;
        line-height: 2em;

        li{
            float:left;
            font-size: 0.4em;
            a{
                float: none;
                color: #017890;
                display: block;
                padding: 20px;
                text-align: center;
            }
        }
    }
}

form#search{
    display:none;
    position: absolute; bottom: 0px; right:0;border-radius: 15px 15px 0 0;
    padding: 0.5em 30px;
    background:rgba(0, 0, 0, 0.5);
    line-height: 1px;
    font-size: 0.4em;

    input[type=search]{
        width:150px;
    }
}
form#login{
    float: right;
    text-align: right;
    line-height: 1.5em;
    font-size: 0.45em;
    padding: 10px 20px;
    color: #d48300;

    input{
        display: block;
        width: 92%;
        padding: 4px 3%;
        &[type=submit]{
            width:100%;
        }
    }
}

#page_header{
    text-align: left;
    position: relative;
    border: 0;
    font-size: 2em;
    font-weight: bold;
    color: #D48300;
    background: none;
    -webkit-transition:background 1s ease-out;
    -moz-transition:background 1s ease-out;
    -o-transition:background 1s ease-out;
    -ms-transition: background 1s ease-out;
    transition:background 1s ease-out;
    .time{
        font-size: 0.4em;
        font-weight: normal;
    }
}

.authorProfile{
    float: right;
    margin: 20px;
    color: #D48300;
    img{
        border-bottom: 2px solid #D48300;
    }
    small{
        display:block;
        margin:0;
        color: #D4A775;
        font-size: 0.75em;
        a{
            display:block;
        }
    }
}

@media (max-width: 900px){
    body.responsive{
        #site_header ul {
            padding-top: 1em;
            line-height: 1em;
            float: right;
        }
        form#login{
            position: absolute;
            right:0;
            width:95%;
            div,
            input,
            input[type=submit]{
                display:inline;
                width: auto;
                padding: 4px 1%;
            }
            input{
                width:115px;
            }
        }
    }
}

@media (max-width: 768px){
    body.responsive{
        #site_header {
            .login{
                display:none;
            }
            .hgroup {
                width:167px;
                .site_name{
                    letter-spacing:-4px;
                    font-size: 0.75em;
                }
            }
            ul li a{
                padding:0 20px;
            }
        }
        #page_header{
            font-size: 1.5em;
            padding-top: 10px;
            padding-bottom: 10px;
        }
        a.mainLink{
            padding-top:12px;
            padding-bottom:12px;
        }
        .authorProfile{
            width:25%;
            min-width: 125px;
        }
        .article h2{
            line-height: 1em;
        }
    }
}

@media (max-width: 600px){
    body.responsive{

        #recent_articles .header h2,
        #recent_articles .header,
        #recent_articles p{
            width:100%;
            float:none;
            padding:0;
            text-align: left;
            small{
                margin-left:0;
            }
        }
        #site_header {
            .hgroup,
            .site_name,
            .mainLink{
                width: 100%;
                padding-left:0;
                padding-right:0;
                text-align: center!important;
            }
            ul{
                clear: left;
                padding: 0;
                float: none;
                li {
                    width:25%;
                }
            }
        }
        form#login{
            display: none;
            width:200px;
            input{
                display:block;
            }
        }
        #page_header{
            h1 small{
                display:block;
                margin: 0;
            }
        }
    }
}


@media (max-width: 480px){
    body.responsive{
        .clear_bp480{
            clear: left;
        }
        #site_header {
            .header .site_name{
                font-size: 0.65em;
            }
            ul li{
                width: 50%;
            }
            a.mainLink{
               line-height:1em;
                padding: 4px 0;
            }
        }
    }
}
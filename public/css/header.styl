#site_header{
    border: 1px solid header-shadow;
    border-radius:20px 20px 0 0;

    font-family: 'Quicksand';
    font-size: 3em;
    margin: 30px 0 15px;
    text-shadow: 1px 1px 1px header-shadow;
    padding-bottom:0;
    position:relative;

    .site_name{
        margin: 0pc;
        font-size: 1.4em;
        text-align: center;
        letter-spacing: -10px;
        word-spacing: 10px;
        color:main-color;
    }
    .tag_line{
        font-size: 0.35em;
        text-align: center;
        margin-bottom: 20px;
        margin: 0 auto;
        margin-bottom: 2em;
        overflow: visible;
    }

    ul {
        overflow:auto;
        li{
            float:left;
            font-size: 0.4em;
            a{
                border-radius: 15px 15px 0 0;
                padding: 10px 30px;
                background:rgba(0, 0, 0, 0.35);
                text-decoration: none;
                color: #F2E4D5;
                display: block;
                border: 1px solid header-shadow;
                border-width: 1px 1px 0;
            }
            a:focus,
            a:hover{
                background:rgba(0, 0, 0, 1);
                color: darken(#F2E4D5,50%);
            }
        }
    }
    form{
        position: absolute; bottom: 0px; right:10px;border-radius: 15px 15px 0 0;
        padding: 0.5em 30px;
        background:rgba(0, 0, 0, 0.35);
        line-height: 1px;
        font-size: 0.4em;
    }
    form:hover{
        background:header-shadow;
    }
}
body.fixed {
    padding-top:198px;
    #site_header{
        border: 0;
        position: fixed; top:-168px; width: 920px; padding-bottom: 30px; z-index: 10;
        background: -moz-linear-gradient(top, rgba(0,0,0,1) 0%, rgba(0,0,0,1) 176px, rgba(0,0,0,0) 100%);
        background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(0,0,0,1)), color-stop(176px,rgba(0,0,0,1)), color-stop(100%,rgba(0,0,0,0)));
        background: -webkit-linear-gradient(top, rgba(0,0,0,1) 0%,rgba(0,0,0,1) 176px,rgba(0,0,0,0) 100%);
        background: -o-linear-gradient(top, rgba(0,0,0,1) 0%,rgba(0,0,0,1) 176px,rgba(0,0,0,0) 100%);
        background: -ms-linear-gradient(top, rgba(0,0,0,1) 0%,rgba(0,0,0,1) 176px,rgba(0,0,0,0) 100%);
        background: linear-gradient(to bottom, rgba(0,0,0,1) 0%,rgba(0,0,0,1) 176px,rgba(0,0,0,0) 100%);
        /*filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#000000', endColorstr='#00000000',GradientType=0 );*/
        form{
            bottom:30px;
        }
    }
}
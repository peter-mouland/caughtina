html[xmlns] #recent_articles  article{
    display: block;
}

* html #recent_articles article {
    height: 1%;
}


#recent_articles{
    article{
        display: inline-block;
        width: 100%;
        padding: 20px 0;
        background: rgba(0,0,0,0.5);
        border-radius:20px;
    }
    article:after {
        content: ".";
        display: block;
        clear: both;
        visibility: hidden;
        line-height: 0;
        height: 0;
    }
    header{
        width: 50%;
        float: left;
    }
    h2{ margin: 0.75em 0;
        text-align: right;
        font-size: 1.6em;
        text-shadow:1px 1px 1px darken(#A0AFAC, 33%);
        padding-right:20px;
    }
    article{
        position: relative;
        clear: left;
        margin-bottom: 20px;
    }
    section{
        width:100%;
    }
    .time{position: absolute;
        left: 50%;
        top: 24px;
        font-size:0.875em;
        color: darken(main-color, 66%);
    }
    aside{
        position: absolute;top: 24px; left:0; width:50%; text-align: right;
        font-size:0.875em;
        li{ display:inline; padding-right: 20px }
        a{
            color: darken(#A0AFAC, 40%);
        }
    }
    p{ color: darken(#F2E4D5, 40%);
        padding-top: 1.5em;width: 50%;
        float: right;
        .more{float:right;font-size: 0.875em; color: darken(#A0AFAC, 33%); padding-right: 20px;}
    }
}

@import 'nib';
@import url('http://fonts.googleapis.com/css?family=Quicksand');

/*resets*/
global-reset()
footer,aside,section,article,nav,header{display:block; margin:0;padding:0;}

/*vars*/
main-color = #C98A4B
background-color = #F9F3EC


body{
  font-family: 'Georgia';
  background-color: background-color;
  color: #444;
    background-image: -webkit-radial-gradient(white 25%, background-color);
    background-image: -moz-radial-gradient(white 25%, background-color);
    background-image: -o-radial-gradient(white 25%, background-color);
    background-image: -ms-radial-gradient(white 25%, background-color);
    background-image: radial-gradient(white 25%, background-color);
}
a{
    text-decoration: none;
    color: #701F1C;
}
a:hover,a:focus{
    text-decoration: underline;
}

.at{
    position: absolute;
    clip: rect(0 0 0 0);
    clip:rect(1px,1px,1px,1px);
}

#site_header{
  font-family: 'Quicksand';
  color: #fff;
  font-size: 3em;
  overflow: auto;
  padding:2pc;
  background-color: main-color;
  border-bottom: 1px solid darken(main-color, 30%);
  text-shadow: 2px 2px 2px darken(main-color, 30%);

  .site_name{
    float: left;
    margin: 0pc;
  }
  .tag_line{
    position: absolute;
    top: 2pc; left: 2pc;
    font-size: 0.35em;
    padding-top: 2.75em;
    color: #F2E4D5;
  }

  ul {
    display:inline;
    li{
        display:inline;
        font-size: 0.5em;
        a{
            border-radius: 15px;
            padding: 10px;
        }
        a:hover{
            background:rgba(255,255,255,0.25);
            border-bottom: 1px solid;
            text-decoration: none;
        }
    }
  }
  form{
      display: inline;
  }
}
#site_footer{
    color: main-color;
    border-top: 1px solid darken(main-color, 30%);
    padding:1pc 2pc;
    font-size: 1.5em;
    overflow: auto;
}
.main_wrapper{
    padding:1pc 2pc;
    clear: both;
}


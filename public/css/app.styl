@import 'global.styl';
@import 'header.styl';
@import 'footer.styl';
@import 'recent_articles.styl';
@import 'articles.styl';

.button{
    background-color:#0000aa;
    border-radius: 5px;
    position: relative;
    z-index: 0;
    display:inline-block;

    .pretty{
        background-color: #3366aa;
        display: block; width: 100%; height:50%;
        position: absolute; top:0; left: 0;
        z-index: 1;
        border-radius: 10px 10px 20px 20px;

    }
    .text{
        z-index:2;
        position: relative;
        cursor:pointer;
        font-size: 16px;
        line-height: 30px;
        height: 30px;
        color: #fff;
        background: transparent;
        border: 0;
        padding: 0 15px ;
        cursor:pointer;
    }
    input.text{
        line-height:100%;
    }
    &:hover{
        text-decoration:none;
        .pretty{
            background-color:#0000aa;

        }
    }
}
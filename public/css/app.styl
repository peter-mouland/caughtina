@import 'global.styl';
@import 'header.styl';
@import 'footer.styl';
@import 'recent_articles.styl';
@import 'articles.styl';

.button{
    font-size: 1em;
    background-color:#0000aa;
    border-radius: 0.33em;
    position: relative;
    z-index: 0;
    display:inline-block;

    .pretty{
        background-color: #3366aa;
        display: block; width: 100%; height:40%;
        position: absolute; top:0; left: 0;
        z-index: 1;
        border-radius: 0.725em 0.725em 1.5em 1.5em ;

    }
    .text{
        margin:0;
        z-index:2;
        position: relative;
        cursor:pointer;
        font-size: 1em;
        line-height: 2em;
        height: 2em;
        color: #fff;
        background: transparent;
        border: 0;
        padding: 0 1em;
        cursor:pointer;
        letter-spacing: 1px;
    }
    input.text{
        line-height:100%;
        letter-spacing: 0px;
    }
    &:hover{
        text-decoration:none;
        .pretty{
            background-color:#0000aa;

        }
    }
}
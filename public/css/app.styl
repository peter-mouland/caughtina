@import 'nib';
@import url('http://fonts.googleapis.com/css?family=Quicksand');

/*vars*/
main-color = rgb(255,222,169);
header-shadow = rgba(0,0,0,0.7)



/*resets*/
global-reset()
footer,aside,section,article,nav,header{display:block; margin:0;padding:0;}
html,body{height: 100%;}
body{
  font-family: helvetica,'Georgia';
  color:darken(#F2E4D5,27.5%);
  background: url("/images/bg_orig3.jpg") center bottom no-repeat fixed ;
  background-size:cover;
}
a{
    text-decoration: none;
    color: #A0AFAC;
}
a:hover,a:focus{
    text-decoration: underline;
}
.at{
    position: absolute;
    clip: rect(0 0 0 0);
    clip:rect(1px,1px,1px,1px);
}

h1,h2{
    font-family: 'Quicksand';
}


/* layout : all pages */
#content{
    width: 960px; margin: 0 auto; position: relative;
}
.wrapper{
    background:header-shadow;
    padding: 20px;
    border: 1px solid header-shadow;
}
h1{ font-size: 2em;color: black;
    font-weight: bold;
    background: rgba(255, 255, 255, 0.2);
    border: 1px solid rgba(255,255,255,0.33);
    margin: 20px 0;
    padding: 20px;
}
.main_wrapper{
    padding:1pc 2pc;
    clear: both;
}

/* header */
#site_header{
    border: 1px solid header-shadow;
    border-radius:20px 20px 0 0;

    font-family: 'Quicksand';
    font-size: 3em;
    margin: 60px 0 20px;
    text-shadow: 1px 1px 1px header-shadow;
    padding-bottom:0;
    position:relative;

  .site_name{
    margin: 0pc;
      font-size: 1.4em;
      text-align: center;
      letter-spacing: -10px;
      word-spacing: 10px;
      color:main-color;
  }
  .tag_line{
    font-size: 0.35em;
      text-align: center;
      margin-bottom: 20px;
      margin: 0 auto;
      margin-bottom: 2em;
      overflow: visible;
  }

  ul {
      overflow:auto;
    li{
        float:left;
        font-size: 0.4em;
        a{
            border-radius: 15px 15px 0 0;
            padding: 10px 30px;
            background:rgba(0, 0, 0, 0.50);
            text-decoration: none;
            color: #F2E4D5;
            display: block;
            border: 1px solid header-shadow;
            border-width: 1px 1px 0;
        }
        a:focus,
        a:hover{
            background:rgba(0, 0, 0, 0.66);
            color: darken(#F2E4D5,33%);
        }
    }
  }
  form{
      position: absolute; bottom: 0px; right:10px;border-radius: 15px 15px 0 0;
      padding: 0.5em 30px;
      background:rgba(0, 0, 0, 0.50);
      line-height: 1px;
      font-size: 0.4em;
  }
    form:hover{
        background:header-shadow;
    }
}


/* footer */
#site_footer{
    color: main-color;
    border-top: 1px solid darken(main-color, 30%);
    padding:1pc 2pc;
    font-size: 1em;
    overflow: auto;
    color: #F2E4D5;
    h2 { float:left;  margin:0;}
    ul li { display:inline; line-height: 2.4em; margin: 0 20px;}
}


/* articles */

html[xmlns] #recent_articles  article{
    display: block;
}

* html #recent_articles article {
    height: 1%;
}


#recent_articles{
    article{
         display: inline-block;
         width: 100%;
        border-bottom: 1px dashed #666;
        padding-bottom: 20px;
     }
    article:after {
          content: ".";
          display: block;
          clear: both;
          visibility: hidden;
          line-height: 0;
          height: 0;
    }
    header{
        width: 50%;
        float: left;
    }
    h2{ margin: 0.75em 0;
        text-align: right;
        font-size: 1.6em;
        text-shadow:1px 1px 1px darken(#A0AFAC, 40%);
        a{
            padding-right:20px;
        }
    }
    article{
        position: relative;
        clear: left;
        margin-bottom: 20px;
    }
    .time{position: absolute;
        left: 50%;
        top: 4px;
        font-size:0.875em;
        color: darken(main-color, 65%);
    }
    aside{
        position: absolute;top: 4px; left:0; width:50%; text-align: right;
        font-size:0.875em;
        li{ display:inline; padding-right: 20px }
        a{ color: darken(#A0AFAC, 40%);}
    }
    p{ color: darken(#F2E4D5, 45%);
        padding-top: 1.5em;width: 50%;
        float: right;
        .more{float:right;font-size: 0.875em; color: darken(#A0AFAC, 40%);}
    }
}
